<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/sectionA"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/flag" />

        <ImageView
            android:layout_width="23dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_insert_emoticon_black_24dp" />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="71dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_notifications_none_black_24dp" />

        <ImageView
            android:layout_width="47dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/image" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sectionB"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/sectionA"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:padding="5dp"
        android:background="@drawable/design_one"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="5dp"
            android:padding="0dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="@string/name_ipoola_peter_blessing"
             />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:textSize="15dp"
            android:layout_margin="10sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="@string/slack_id_peterside07"
            android:textAlignment="center"
             />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email_peteripoola_yahoo_com"
            android:padding="0dp"
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textAlignment="center"
           />


    </LinearLayout>

    <RelativeLayout
        android:background="@drawable/design"
        android:layout_margin="10dp"
        android:id="@+id/sectionC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sectionB"
        android:layout_above="@+id/sectionD">
        <ListView
            android:id="@+id/list_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/sectionD"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/icon_1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/github_icon"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/icon" />

    </LinearLayout>



</RelativeLayout>